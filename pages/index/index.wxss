page {
    background-color: #b3d4db;
}
.container {
    display: flex;
    align-items: center;
    flex-direction: column;
}
.user-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-top: 160rpx;
}
.user-name {
    font-size: 32rpx;
    font-weight: bold;
    margin-top: 100rpx;
}
.moto-container {
    border: 1rpx solid #405f80;
    width: 200rpx;
    height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
    margin-top: 200rpx;
}
.moto {
    font-size: 22rpx;
    font-weight: bold;
    line-height: 80rpx;
    color: #405f80;
}