swiper {
    width: 100%;
    height: 600rpx;
}
swiper image {
    width: 100%;
    height: 600rpx;
}
.post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    background-color: #fff;
    border: 1rpx solid #ededed;
    padding: 5rpx 0;
}
.post-author-date {
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author-date image {
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-author-date text {
    margin-left: 20rpx;
    vertical-align: middle;
    margin-bottom: 5 px;
    font-size: 14px;
}
.post-title {
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-image {
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}
.post-content {
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
}
.post-like {
    font-size: 13px;
    line-height: 16px;
    margin-left: 10px;
}
.post-like image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like text {
    vertical-align: middle;
    margin-right: 20rpx;
}